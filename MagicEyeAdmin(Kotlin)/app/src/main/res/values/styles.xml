<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Text Box header-->
    <style name="ll_TextBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_middle</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="img_TextBox">
        <item name="android:layout_width">@dimen/img_textbox_size</item>
        <item name="android:layout_height">@dimen/img_textbox_size</item>
        <item name="android:layout_margin">@dimen/spacing_middle</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <style name="et_TextBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_plain_bg</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_normal_size</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <!--Text Box End-->

    <style name="login_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExoMediaButton.Previous">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ExoMediaButton.Next">
        <item name="android:visibility">gone</item>
    </style>

</resources>