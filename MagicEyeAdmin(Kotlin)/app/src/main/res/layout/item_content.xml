<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <RelativeLayout
        android:padding="@dimen/spacing_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_content_main"
            android:layout_toStartOf="@id/iv_content_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/colorPrimary"
                 android:layout_marginEnd="@dimen/spacing_middle"
                android:id="@+id/view_content_indicator"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/tv_content_name"
                android:layout_toEndOf="@id/student_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/font_normal_size"
                android:textColor="@color/black"/>
        </LinearLayout>
        <ImageView
            android:paddingStart="@dimen/spacing_middle"
            android:paddingEnd="@dimen/spacing_middle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/iv_content_menu"
            android:src="@drawable/ic_edit"
            android:layout_width="60dp"
            android:layout_height="30dp"/>
  </RelativeLayout>
    <View
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</LinearLayout>
